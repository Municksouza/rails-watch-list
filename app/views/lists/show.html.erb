<h1><%= @list.name %></h1>
<p><strong>Description:</strong> <%= @list.description %></p>

<h2>Bookmarks</h2>
<% if @bookmarks.any? %>
  <ul>
    <% @bookmarks.each do |bookmark| %>
      <li>
        <strong>Movie:</strong> <%= bookmark.movie.title %><br>
        <strong>Comment:</strong> <%= bookmark.comment %>
        <%= link_to 'Delete', list_bookmark_path(@list, bookmark), method: :delete, data: { confirm: 'Are you sure?' } %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No bookmarks found for this list.</p>
<% end %>

<%= link_to 'Back to Lists', lists_path %>
