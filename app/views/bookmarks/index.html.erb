<h1>Bookmarks</h1>

<%= link_to 'New Bookmark', new_bookmark_path %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>URL</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><%= bookmark.title %></td>
        <td><%= bookmark.url %></td>
        <td><%= bookmark.description %></td>
        <td><%= link_to bookmark.name, bookmark_path(bookmark) %>

      </tr>
    <% end %>
  </tbody>
</table>
